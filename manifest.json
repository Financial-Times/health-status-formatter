{
  "manifest_version": 2,
  "name": "Health status formatter",
  "description": "Format FT web service health status pages",
  "version": "0.1.1",
  "content_scripts": [{
    "js": [
      "mustache.min.js",
      "content.js"
    ],
    "matches": [
      "*://*/health",
      "*://*/__health",
      "*://*/*/health",
      "*://*/*/__health",
      "*://*/*/health?*",
      "*://*/*/__health?*",
      "*://*/__about"
    ],
    "run_at": "document_end"
  }],
  "icons": {
    "128": "icon_128.png"
  },
  "web_accessible_resources": [
    "template.html",
    "format.js"
  ],
  "background": {
    "scripts": [
      "json_request.js"
    ]
  },
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "*://*.ft.com/__health"
  ]
}
